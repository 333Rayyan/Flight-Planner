<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 100%; max-width: 500px;">
            <h1 class="card-title text-center mb-4">Register</h1>

            <form action="/register" method="POST" id="registerForm">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email"
                        value="<%= oldData && oldData.email ? oldData.email : '' %>" required>
                    <% if (errorMessages) { %>
                        <% errorMessages.forEach(error=> { %>
                            <% if (error.path==='email' ) { %>
                                <div class="error-message">
                                    <%= error.msg %>
                                </div>
                                <% } %>
                                    <% }) %>
                                        <% } %>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control"
                        placeholder="Enter your username"
                        value="<%= oldData && oldData.username ? oldData.username : '' %>" required>
                    <% if (errorMessages) { %>
                        <% errorMessages.forEach(error=> { %>
                            <% if (error.path==='username' ) { %>
                                <div class="error-message">
                                    <%= error.msg %>
                                </div>
                                <% } %>
                                    <% }) %>
                                        <% } %>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter your password" required>
                    <% if (errorMessages) { %>
                        <% errorMessages.forEach(error=> { %>
                            <% if (error.path==='password' ) { %>
                                <div class="error-message">
                                    <%= error.msg %>
                                </div>
                                <% } %>
                                    <% }) %>
                                        <% } %>
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                        placeholder="Confirm your password" required>
                    <% if (errorMessages) { %>
                        <% errorMessages.forEach(error=> { %>
                            <% if (error.path==='confirmPassword' ) { %>
                                <div class="error-message">
                                    <%= error.msg %>
                                </div>
                                <% } %>
                                    <% }) %>
                                        <% } %>
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" id="showPassword" class="form-check-input"
                        onclick="togglePasswordVisibility()">
                    <label class="form-check-label" for="showPassword">Show Password</label>
                </div>

                <div class="password-hint">
                    <p>Password must:</p>
                    <ul>
                        <li>Be at least 6 characters long</li>
                        <li>Include one uppercase letter</li>
                        <li>Include one lowercase letter</li>
                        <li>Include one number</li>
                        <li>Include one special character (!@#$%^&*)</li>
                    </ul>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">Register</button>
            </form>

            <div class="text-center">
                <p>Already have an account? <a href="/login" class="text-decoration-none">Login here</a></p>
                <a href="/" class="btn btn-link text-decoration-none">Back to Home</a>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility() {
            const passwordField = document.getElementById("password");
            const confirmPasswordField = document.getElementById("confirmPassword");
            const showPasswordCheckbox = document.getElementById("showPassword");

            if (showPasswordCheckbox.checked) {
                passwordField.type = "text";
                confirmPasswordField.type = "text";
            } else {
                passwordField.type = "password";
                confirmPasswordField.type = "password";
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>