<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Offers</title>
    <!-- Bootstrap CSS and Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .flight-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
            padding: 15px;
            background-color: #fff;
            cursor: pointer;
            overflow: hidden;
        }

        .flight-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .bookmark-icon {
            font-size: 24px;
            cursor: pointer;
        }

        .details-container {
            display: none;
        }

        .details-container.show {
            display: block;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Header -->
    <%- include("partials/header") %>

    <!-- Main Content -->
    <main class="container my-5">
        <h2 class="mb-4 text-center">Flight Results</h2>

        <% if (offers && offers.length > 0) { %>
            <div class="row">
                <% offers.forEach(offer => { %>
                    <div class="col-12">
                        <div class="flight-card" onclick="toggleDetails('<%= offer.id %>')">
                            <div class="row align-items-center">
                                <!-- Departure and Arrival Times -->
                                <div class="col-md-4">
                                    <h5><strong><%= offer.itineraries[0].segments[0].departure.iataCode %></strong> → <strong><%= offer.itineraries[0].segments[offer.itineraries[0].segments.length - 1].arrival.iataCode %></strong></h5>
                                    <p>
                                        <strong>Departs:</strong> <%= offer.itineraries[0].segments[0].departure.at.split("T")[1] %> <br>
                                        <strong>Arrives:</strong> <%= offer.itineraries[0].segments[offer.itineraries[0].segments.length - 1].arrival.at.split("T")[1] %>
                                    </p>
                                </div>

                                <!-- Price and Stops -->
                                <div class="col-md-4">
                                    <p><strong>Price:</strong> £<%= offer.price.grandTotal %></p>
                                    <p>
                                        <strong>Stops:</strong> <%= offer.itineraries[0].segments.length > 1 ? offer.itineraries[0].segments.length - 1 + ' stop(s)' : 'Direct' %>
                                    </p>
                                </div>

                                <!-- Bookmark Icon -->
                                <div class="col-md-4 text-end">
                                    <button class="btn p-0 bookmark-btn" 
                                            data-offer-id="<%= offer.id %>"
                                            data-origin="<%= offer.itineraries[0].segments[0].departure.iataCode %>" 
                                            data-destination="<%= offer.itineraries[0].segments[offer.itineraries[0].segments.length - 1].arrival.iataCode %>" 
                                            data-departure-date="<%= offer.itineraries[0].segments[0].departure.at %>" 
                                            data-return-date="<%= offer.itineraries[0].segments[offer.itineraries[0].segments.length - 1].arrival.at || null %>" 
                                            data-price="<%= offer.price.grandTotal %>">
                                        <% 
                                        const isBookmarked = bookmarkedOffers.some(b => 
                                            b.origin === offer.itineraries[0].segments[0].departure.iataCode &&
                                            b.destination === offer.itineraries[0].segments[offer.itineraries[0].segments.length - 1].arrival.iataCode &&
                                            b.departure_date === offer.itineraries[0].segments[0].departure.at
                                        );
                                        %>
                                        <% if (isBookmarked) { %>
                                            <i class="bi bi-bookmark-fill text-primary bookmark-icon"></i>
                                        <% } else { %>
                                            <i class="bi bi-bookmark bookmark-icon"></i>
                                        <% } %>
                                    </button>
                                </div>
                            </div>

                            <!-- Details Container -->
                            <div class="details-container mt-3" id="details-<%= offer.id %>">
                                <% offer.itineraries.forEach((itinerary, index) => { %>
                                    <h6 class="mt-3">Itinerary <%= index + 1 %> Details</h6>
                                    <ul class="list-group">
                                        <% itinerary.segments.forEach(segment => { %>
                                            <li class="list-group-item">
                                                <p><strong>From:</strong> <%= segment.departure.iataCode %> (<%= segment.departure.at %>)</p>
                                                <p><strong>To:</strong> <%= segment.arrival.iataCode %> (<%= segment.arrival.at %>)</p>
                                                <p><strong>Carrier:</strong> <%= carriers[segment.carrierCode] %></p>
                                                <p><strong>Aircraft:</strong> <%= aircraft[segment.aircraft.code] %></p>
                                                <p><strong>Duration:</strong> <%= segment.duration %></p>
                                            </li>
                                        <% }) %>
                                    </ul>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="alert alert-warning text-center">
                No flight offers found. Please try again.
            </div>
        <% } %>
    </main>

    <!-- Footer -->
    <%- include("partials/footer") %>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Function to toggle details view
        function toggleDetails(offerId) {
            const details = document.getElementById(`details-${offerId}`);
            details.classList.toggle("show");
        }

        // Function to toggle bookmark status
        document.querySelectorAll('.bookmark-btn').forEach(button => {
            button.addEventListener('click', async (e) => {
                e.stopPropagation(); // Prevent triggering other click events
                
                const origin = button.dataset.origin;
                const destination = button.dataset.destination;
                const departureDate = button.dataset.departureDate;
                const returnDate = button.dataset.returnDate || null;
                const price = button.dataset.price;

                try {
                    const response = await fetch('/toggle-bookmark', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            origin,
                            destination,
                            departureDate,
                            returnDate,
                            price,
                        }),
                    });

                    const result = await response.json();

                    if (result.success) {
                        const icon = button.querySelector('.bookmark-icon');
                        if (result.bookmarked) {
                            icon.classList.remove('bi-bookmark');
                            icon.classList.add('bi-bookmark-fill', 'text-primary');
                        } else {
                            icon.classList.remove('bi-bookmark-fill', 'text-primary');
                            icon.classList.add('bi-bookmark');
                        }
                    } else {
                        alert(result.message || 'Failed to toggle bookmark.');
                    }
                } catch (error) {
                    console.error('Error toggling bookmark:', error);
                    alert('An error occurred while toggling the bookmark.');
                }
            });
        });
    </script>
</body>
</html>
