<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Offers</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="bg-primary text-white text-center py-3">
        <h1>Flight Offers</h1>
        <nav>
            <ul class="nav justify-content-center">
                <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/about">About</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/search">Search Flights</a></li>
                <% if (user) { %>
                    <li class="nav-item"><a class="nav-link text-white" href="/bookmarks">My Bookmarks</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/logout">Logout</a></li>
                <% } else { %>
                    <li class="nav-item"><a class="nav-link text-white" href="/login">Login</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/register">Register</a></li>
                <% } %>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container my-5">
        <h2 class="mb-3">Starting Location: <%= startingLocation %></h2>
        <h2 class="mb-4">Destination: <%= destinationLocation || 'Various' %></h2>

        <% if (offers && offers.length > 0) { %>
            <div class="list-group">
                <% offers.forEach(offer => { %>
                    <div class="list-group-item mb-4 border rounded p-4 shadow-sm">
                        <h3 class="fw-bold">Offer ID: <%= offer.id %></h3>
                        <p><strong>Total Price:</strong> Â£<%= offer.price.grandTotal %></p>
                        <p><strong>Number of Seats:</strong> <%= offer.numberOfBookableSeats %></p>
                        <% offer.itineraries.forEach((itinerary, index) => { %>
                            <div class="border rounded p-3 mt-3">
                                <h4 class="fw-semibold">Itinerary <%= index + 1 %> - Duration: <%= itinerary.duration %></h4>
                                <ul class="list-unstyled">
                                    <% itinerary.segments.forEach(segment => { %>
                                        <li class="mb-3">
                                            <p><strong>From:</strong> <%= segment.departure.iataCode %> (<%= segment.departure.at %>)</p>
                                            <p><strong>To:</strong> <%= segment.arrival.iataCode %> (<%= segment.arrival.at %>)</p>
                                            <p><strong>Carrier:</strong> <%= carriers[segment.carrierCode] %></p>
                                            <p><strong>Aircraft:</strong> <%= aircraft[segment.aircraft.code] %></p>
                                            <p><strong>Duration:</strong> <%= segment.duration %></p>
                                        </li>
                                    <% }) %>
                                </ul>
                            </div>
                        <% }) %>
                        <% if (user) { %>
                            <form action="/bookmark" method="POST" class="mt-3">
                                <input type="hidden" name="origin" value="<%= offer.itineraries[0].segments[0].departure.iataCode %>">
                                <input type="hidden" name="destination" value="<%= offer.itineraries[0].segments[offer.itineraries[0].segments.length - 1].arrival.iataCode %>">
                                <input type="hidden" name="departureDate" value="<%= offer.itineraries[0].segments[0].departure.at.split('T')[0] %>">
                                <input type="hidden" name="returnDate" value="<%= offer.itineraries[0].segments[offer.itineraries[0].segments.length - 1].arrival.at.split('T')[0] || null %>">
                                <input type="hidden" name="price" value="<%= offer.price.grandTotal %>">
                                <button type="submit" class="btn btn-success">Bookmark</button>
                            </form>
                        <% } else { %>
                            <p class="text-muted"><em>Login to bookmark this flight.</em></p>
                        <% } %>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="alert alert-warning" role="alert">
                No flight offers found. Please try again.
            </div>
        <% } %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <p>&copy; 2024 Travel Planner. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
