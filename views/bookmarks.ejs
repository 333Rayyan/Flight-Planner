<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Bookmarked Flights</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .bookmark-item {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .remove-btn {
            font-size: 14px;
            padding: 8px 16px;
        }
    </style>
</head>
<body class="bg-light">
    <%- include("partials/header") %>
    <main class="container my-5">
        <h1 class="mb-4 text-center">My Bookmarked Flights</h1>

        <% if (bookmarks.length > 0) { %>
            <div class="row">
                <% bookmarks.forEach(bookmark => { %>
                    <div class="col-md-6">
                        <div class="bookmark-item">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <p><strong>From:</strong> <%= bookmark.origin %></p>
                                    <p><strong>To:</strong> <%= bookmark.destination %></p>
                                    <p><strong>Departure:</strong> <%= new Date(bookmark.departure_date).toLocaleString() %></p>
                                    <p><strong>Return:</strong> <%= bookmark.return_date ? new Date(bookmark.return_date).toLocaleString() : 'N/A' %></p>
                                    <p><strong>Price:</strong> Â£<%= bookmark.price %></p>
                                </div>
                                <div>
                                    <button class="btn btn-danger remove-btn" data-bookmark-id="<%= bookmark.id %>">Remove</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="alert alert-warning text-center" role="alert">
                You have no bookmarked flights.
            </div>
        <% } %>
    </main>

    <!-- Confirmation Modal -->
    <div id="confirmModal" class="modal fade" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Removal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to remove this bookmark?</p>
                </div>
                <div class="modal-footer">
                    <button id="confirmYes" class="btn btn-danger">Yes</button>
                    <button id="confirmNo" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden form for removal -->
    <form id="removeForm" action="/remove-bookmark" method="POST" style="display:none;">
        <input type="hidden" name="bookmarkId" id="bookmarkId">
    </form>

    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.remove-btn').forEach(button => {
            button.addEventListener('click', function () {
                const bookmarkId = this.getAttribute('data-bookmark-id');
                document.getElementById('bookmarkId').value = bookmarkId;

                // Show the confirmation modal
                const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
                modal.show();

                // Handle confirmation button
                document.getElementById('confirmYes').onclick = function () {
                    document.getElementById('removeForm').submit(); // Submit the hidden form
                };
            });
        });
    </script>
    <%- include("partials/footer") %>
</body>
</html>
